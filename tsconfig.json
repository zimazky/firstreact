{
  "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es2020",
      "jsx": "react-jsx",
      "noEmitOnError": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}